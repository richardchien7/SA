<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        tools:ignore="MissingConstraints">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#508393"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="輔 大 醫 院"
            app:titleMarginStart="145dp"/>


    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.example.sa.DrawableVerticalButton
                android:id="@+id/reserve"
                android:layout_width="85pt"
                android:layout_height="85pt"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="2.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="2.5dp"
                android:background="@drawable/bt_border"
                android:text="預約掛號"
                android:textSize="20sp"
                android:drawableTop="@drawable/reserve"

                android:includeFontPadding="false"
                />
            <com.example.sa.DrawableVerticalButton
                android:id="@+id/schedule"
                android:layout_width="85pt"
                android:layout_height="85pt"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="2.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="2.5dp"
                android:background="@drawable/bt_border"
                android:text="看診進度"
                android:textSize="20sp"
                android:drawableTop="@drawable/schedule"
                android:includeFontPadding="false"
                android:layout_toRightOf="@id/reserve"
                />
            <com.example.sa.DrawableVerticalButton
                android:id="@+id/doctor_info"
                android:text="醫師資訊"
                android:textSize="20sp"
                android:layout_below="@id/reserve"
                android:layout_width="85pt"
                android:layout_height="85pt"
                android:drawableTop="@drawable/doctor_info"
                android:background="@drawable/bt_border"
                android:includeFontPadding="false"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="2.5dp"
                />
            <com.example.sa.DrawableVerticalButton
                android:id="@+id/individual"
                android:layout_toRightOf="@id/reserve"
                android:layout_below="@id/schedule"
                android:text="個人紀錄"
                android:textSize="20sp"
                android:layout_width="85pt"
                android:layout_height="85pt"
                android:drawableTop="@drawable/individual"
                android:background="@drawable/bt_border"
                android:includeFontPadding="false"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="2.5dp"
                />
            <com.example.sa.DrawableVerticalButton
                android:id="@+id/question"
                android:text="提問"
                android:textSize="20sp"
                android:layout_below="@id/doctor_info"
                android:layout_width="85pt"
                android:layout_height="85pt"
                android:drawableTop="@drawable/question"
                android:background="@drawable/bt_border"
                android:includeFontPadding="false"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="2.5dp"
                />
            <com.example.sa.DrawableVerticalButton
                android:id="@+id/hospital_info"
                android:layout_toRightOf="@id/question"
                android:layout_below="@id/individual"
                android:text="醫院資訊"
                android:textSize="20sp"
                android:layout_width="85pt"
                android:layout_height="85pt"
                android:drawableTop="@drawable/hospital_info"
                android:background="@drawable/bt_border"
                android:includeFontPadding="false"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="2.5dp"
                />
            <com.example.sa.DrawableVerticalButton
                android:id="@+id/system_info"
                android:text="關於系統"
                android:textSize="20sp"
                android:layout_below="@id/question"
                android:layout_width="85pt"
                android:layout_height="85pt"
                android:drawableTop="@drawable/system_info"
                android:background="@drawable/bt_border"
                android:includeFontPadding="false"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="2.5dp"
                android:layout_marginRight="2.5dp"
                />




        </RelativeLayout>


    </ScrollView>

</android.support.constraint.ConstraintLayout>