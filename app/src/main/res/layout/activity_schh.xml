<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:gravity="center">


        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="330dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bt_border"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3pt">

                <TextView
                    android:id="@+id/r1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="心臟科 230診間"
                    android:textSize="13pt" />

                <ImageButton
                    android:id="@+id/r1_set"
                    style="@style/Widget.AppCompat.ImageButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="5dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/bt_image"
                    android:scaleType="fitXY"
                    android:src="@drawable/settings" />

                <Switch
                    android:id="@+id/r1_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="250dp"
                    android:layout_marginTop="6dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3pt">

                <TextView
                    android:id="@+id/r1_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="看診醫生:"
                    android:textSize="10pt" />

                <TextView
                    android:id="@+id/r1_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/r1_d"
                    android:text="羅志祥"
                    android:textSize="10pt" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3pt"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/r1_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="時段:"
                    android:textSize="10pt" />

                <TextView
                    android:id="@+id/r1_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/r1_t"
                    android:text="上午"
                    android:textSize="10pt" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3pt"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/r1_da"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="預約看診日期:"
                    android:textSize="10pt" />

                <TextView
                    android:id="@+id/r1_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/r1_da"
                    android:text="108年4月12日"
                    android:textSize="10pt" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3pt"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/r1_n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="預約編號:"
                    android:textSize="10pt" />

                <TextView
                    android:id="@+id/r1_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/r1_n"
                    android:text="27"
                    android:textSize="10pt" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/r1_s"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目前看診進度:"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12pt" />

                <TextView
                    android:id="@+id/r1_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/r1_s"
                    android:text="13"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="12pt" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/r1_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bt_border"
                    android:text="取消掛號" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>